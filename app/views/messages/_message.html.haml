.wrapper__right__messages__message{data: {message: {id: message.id}}}
  .wrapper__right__messages__message__upper-info
    .wrapper__right__messages__message__upper-info__user
      = message.user.username
    .wrapper__right__messages__message__upper-info__created-at
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .wrapper__right__messages__message__content
    - if message.present?
      %p.wrapper__right__messages__message__content__text
        = message.content
    = image_tag message.image.url, alt: 'image', width: '400px', class: 'wrapper__right__messages__message__content__img' if message.image.present?
